<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="uk.co.massimocarli.transitiontest">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".activities.StartContentTransitionActivity"
              android:exported="true"/>
    <activity android:name=".activities.EndContentTransitionActivity"
              android:exported="true"/>

    <activity
        android:name=".activities.StartResContentTransitionActivity"
        android:theme="@style/AppTheme.WithTransition"
        android:exported="true"/>
    <activity
        android:name=".activities.EndResContentTransitionActivity"
        android:theme="@style/AppTheme.WithTransition"
        android:exported="true"/>
    <activity android:name=".activities.StartSharedTransitionActivity"
              android:exported="true"/>
    <activity android:name=".activities.EndSharedTransitionActivity"
              android:exported="true"/>
  </application>

</manifest>